{
  "author": "Antonio De Luca <contact@antoniodeluca.info>",
  "description": "A JavaScript Robot - Engine",
  "license": "MIT",
  "name": "a-javascript-robot-engine",
  "scripts": {
    "format": "prettier ./assets/**/*.ts ./tests/**/*.ts --write",
    "lint": "eslint ./assets/**/*.ts ./tests/**/*.ts",
    "start": "npx ts-node ./assets/index.ts",
    "test": "npm run test:unit && npm run test:acceptance",
    "test:acceptance": "npx jest --verbose ./tests/acceptance/*",
    "test:unit": "npx jest --verbose ./tests/unit/*"
  },
  "version": "0.1.0",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.4.0",
    "npm-run-all2": "^6.0.4",
    "parcel": "^2.8.3",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
